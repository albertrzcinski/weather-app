{
  "name": "weather-app",
  "version": "1.0.0",
  "description": "Weather application",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build:scss": "sass --style=compressed src/styles:dist/styles",
    "watch:scss": "onchange -i -v 'src/styles/*.scss' -- npm run build:scss",
    "build:css": "npx postcss dist/styles/*.css --use autoprefixer -d dist/styles",
    "lint:js": "eslint --fix src/js/*.js",
    "watch:js": "onchange -i -v 'src/js/*.js' -- npm run lint:js",
    "start": "browser-sync -s -w",
    "watch:all": "npm-run-all --parallel start watch:scss watch:js",
    "build": "npm run build:scss && npm run build:css"
  },
  "author": "Albert Trzci≈Ñski <albertrzcinski@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "browser-sync": "^3.0.4",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "sass": "^1.90.0"
  }
}
